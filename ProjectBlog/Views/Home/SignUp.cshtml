@model ProjectBlog.Models.UserView

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up - AmaderBlog.com</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <style type="text/css"></style>
    <style>
        .errorMsg {
            color: red;
        }
    </style>
</head>
<body style="font-family: Consolas; background-color: lightcyan">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid" style="background-color: #33CCFF; ">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><strong>AmaderBlog.com</strong></a>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="#">
                            <i class="fa fa-facebook fa-2x"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-twitter fa-2x"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <form action="/Post/Search" method="get" class="navbar-form navbar-right" role="search">
                        <input type="text" name="SearchString" id="txtContent" placeholder="Type your search">
                        <button type="submit" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </form>
                </li>
                <li><a href="@Url.Action("About", "Home")">About</a></li>
            </ul>
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container" style="margin-top: 100px">
        <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign Up</div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    @using (Html.BeginForm("SignUp", "Home", FormMethod.Post,
                        new { @id = "frmId", @class = "form-horizontal" }))
                    {

                        @Html.ValidationSummary(true)

                        <fieldset>
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label for="email" class="col-md-4 control-label">Email</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", @placeholder = "Email" })
                                    <span class="errorMsg">@Html.ValidationMessageFor(model => model.Email)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-md-4 control-label">User Name</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "username", @placeholder = "User Name" })
                                    <span class="errorMsg">@Html.ValidationMessageFor(model => model.UserName)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-md-4 control-label">Password</label>
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password", @placeholder = "Password" })
                                    <span class="errorMsg">@Html.ValidationMessageFor(model => model.Password)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="ConfirmPassword" class="col-md-4 control-label">Re-type Password</label>
                                <div class="col-md-8">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Re-type Password" })
                                    <span class="errorMsg">@Html.ValidationMessageFor(model => model.ConfirmPassword)</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-8">
                                    <input type="submit" class="btn btn-info" value="Sign Up" />
                                </div>
                            </div>

                            @if (ViewBag.Message != null)
                            {
                                <div class="errorMsg">
                                    @ViewBag.Message
                                </div>
                            }

                            <div class="form-group">
                                <div class="col-md-12 control">
                                    <div style="border-top: 1px solid #888; padding-top: 15px; font-size: 85%">
                                        Already have an account?
                                        <a> @Html.ActionLink("Sign In Here", "SignIn") </a>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
    <div id="footer" class="nav navbar-default navbar-fixed-bottom" style="font-family: Lucida Sans; background-color: #33CCFF; ">
        <div class="container">
            <div class="row nav navbar-nav navbar-right">
                &copy; 2015 Team Engine Box | All Right Reserved
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/npm.js"></script>
</body>
</html>