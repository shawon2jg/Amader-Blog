@model ProjectBlog.Models.Post

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/ckeditor/contents.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <title>Publish article - AmaderBlog.com</title>
</head>
<body style="font-family: Consolas; background-color: lightcyan">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid" style="background-color: #33CCFF; ">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><strong>AmaderBlog.com</strong></a>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="#">
                            <i class="fa fa-facebook fa-2x"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-twitter fa-2x"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form action="/Post/Search" method="get" class="navbar-form navbar-left" role="search">
                            <input type="text" name="SearchString" id="txtContent" placeholder="Type your search">
                            <button type="submit" class="btn btn-info">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </form>
                    </li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@ViewBag.User.UserName<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Create", "Post")">Write New Article</a></li>
                            <li><a href="@Url.Action("MyPosts", "Post")">My Articles</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("SignOut", "Home")">Sign Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <form id="myForm" class="form-horizontal" method="POST">
        @*@Html.AntiForgeryToken()*@

        <div class="form-horizontal" style="margin-top: 100px">
            <h3 class="col-sm-offset-4">Edit & publish your article</h3>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                <div class="col-sm-8">
                    <textarea class="form-control" name="Title" id="Title" placeholder="Title" rows="2">@Model.Title</textarea>
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    <textarea class="ckeditor" id="Content" name="Content" rows="20">@Model.Content</textarea>
                    @Html.ValidationMessageFor(model => model.Content)
                </div>
            </div>
            <div id="trackingDiv"></div>

            <div class="form-group">
                <div class="col-md-offset-2 col-sm-1">
                    <input type="hidden" name="PostID" value="@Model.PostID" />
                    <button type="submit" id="publish" name="publish" class="btn btn-info">Publish</button>
                </div>
            </div>
        </div>
        <div id="footer" class="nav navbar-default navbar-fixed-bottom" style="font-family: Lucida Sans; background-color: #33CCFF; ">
            <div class="container">
                <div class="row nav navbar-nav navbar-right">
                    &copy; 2015 Team Engine Box | All Right Reserved
                </div>
            </div>
        </div>
    </form>
    <div>&nbsp;</div>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
</body>
</html>
